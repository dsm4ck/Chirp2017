@model Chirp2017.Models.SearchPageModel
<br />
@using (Html.BeginForm("Search", "Home", FormMethod.Post))
{
    <span>UserName:</span>
    @Html.TextBoxFor(m => m.searchData.myUserName)
    <span>Number:</span>
    @Html.TextBoxFor(m => m.searchData.myNumber)
    <span>keyword:</span>
    @Html.TextBoxFor(m => m.searchData.myKeyword)
    <span>location(lat,long):</span>
    @Html.TextBoxFor(m => m.searchData.myLocation)
    <input type="submit" value="Submit" />
}   

<title>Results</title><br />

@if(Model?.tweets == null || Model.tweets.Count < 1)
{
    if (Model.usernameValid)
    {
    <span>no results found</span>
    }
    else
    {
        <div class="text-danger"> User: @Html.DisplayFor(Model => Model.searchData.myUserName) does not exist </div>
    }
}
else
{

    foreach (var item in Model.tweets)
    {
        <p>
            <ul>
                <li>
                    <Strong>@Html.DisplayFor(modelItem => item.Author)</Strong>: @Html.DisplayFor(modelItem => item.TweetString)
                </li>
                <li>
                    @Html.DisplayFor(modelItem => item.timeStamp)
                </li>
            </ul>
        </p>
    }
}